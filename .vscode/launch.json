{
    "version": "0.2.0",
    "configurations": [
        // FRONT-END VUE
        {
            "type": "pwa-chrome",
            "request": "launch",
            "name": "Debug Front-end Vue (Vite)",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/front_end"
        },
        // BACK-END EXPRESS
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Back-end (Express)",
            "program": "${workspaceFolder}/back_end/src/server.js",
            "cwd": "${workspaceFolder}/back_end",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal",
            "runtimeArgs": [
                "--inspect=9229"
            ]
        }
    ]
}